---
import { SITE } from '../config/site.ts';
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title={`Contact - ${SITE.author}`}
  description={`Get in touch with ${SITE.author} for speaking opportunities, consulting, or collaboration.`}
>
  <Navigation />

  <main class="pt-16">
    <!-- Hero Section -->
    <section class="bg-brand-light py-24 dark:bg-brand-dark">
      <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <h1 class="mb-6 text-4xl font-bold text-brand-primary dark:text-brand-light sm:text-5xl">
          <h1
            class="mb-6 font-serif text-4xl font-semibold text-brand-primary dark:text-brand-light sm:text-5xl"
          >
            Get In Touch
          </h1>
          <p class="mx-auto max-w-2xl text-xl text-brand-subtle dark:text-gray-300">
            I'm always interested in hearing about new opportunities, speaking engagements, or just
            connecting with fellow engineers.
          </p>
        </h1>
      </div>

      <!-- Contact Form & Info -->
      <section class="bg-white py-24 dark:bg-brand-primary">
        <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
            <!-- Contact Form -->
            <div
              class="rounded-lg border border-brand-subtle/20 bg-brand-light p-8 shadow-lg dark:bg-brand-dark"
            >
              <h2 class="mb-6 text-2xl font-bold text-brand-primary dark:text-brand-light">
                <h2
                  class="mb-6 font-serif text-2xl font-semibold text-brand-primary dark:text-brand-light"
                >
                  Send me a message
                </h2>

                <form class="space-y-6">
                  <div>
                    <label
                      for="name"
                      class="mb-2 block text-sm font-medium text-brand-subtle dark:text-gray-300"
                    >
                      Name
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full rounded-md border border-brand-subtle/30 px-4 py-3 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-accent dark:border-gray-600 dark:bg-brand-primary dark:text-brand-light"
                      placeholder="Your name"
                    />
                  </div>

                  <div>
                    <label
                      for="email"
                      class="mb-2 block text-sm font-medium text-brand-subtle dark:text-gray-300"
                    >
                      Email
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full rounded-md border border-brand-subtle/30 px-4 py-3 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-accent dark:border-gray-600 dark:bg-brand-primary dark:text-brand-light"
                      placeholder="your.email@example.com"
                    />
                  </div>

                  <div>
                    <label
                      for="subject"
                      class="mb-2 block text-sm font-medium text-brand-subtle dark:text-gray-300"
                    >
                      Subject
                    </label>
                    <select
                      id="subject"
                      name="subject"
                      required
                      class="w-full rounded-md border border-brand-subtle/30 px-4 py-3 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-accent dark:border-gray-600 dark:bg-brand-primary dark:text-brand-light"
                    >
                      <option value="">Select a subject</option>
                      <option value="speaking">Speaking Opportunity</option>
                      <option value="consulting">Consulting Inquiry</option>
                      <option value="collaboration">Collaboration</option>
                      <option value="mentoring">Mentoring</option>
                      <option value="other">Other</option>
                    </select>
                  </div>

                  <div>
                    <label
                      for="message"
                      class="mb-2 block text-sm font-medium text-brand-subtle dark:text-gray-300"
                    >
                      Message
                    </label>
                    <textarea
                      id="message"
                      name="message"
                      rows="6"
                      required
                      class="w-full resize-none rounded-md border border-brand-subtle/30 px-4 py-3 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-accent dark:border-gray-600 dark:bg-brand-primary dark:text-brand-light"
                      placeholder="Tell me about your project, opportunity, or how I can help..."
                    ></textarea>
                  </div>

                  <button
                    type="submit"
                    class="w-full rounded-md bg-brand-accent px-6 py-3 font-medium text-white transition-colors hover:bg-accent-bronze focus:outline-none focus:ring-2 focus:ring-brand-accent focus:ring-offset-2"
                  >
                    Send Message
                  </button>
                </form>
              </h2>

              <!-- Contact Info -->
              <div class="space-y-8">
                <!-- Contact Methods -->
                <div
                  class="rounded-lg border border-brand-subtle/20 bg-brand-light p-8 shadow-lg dark:bg-brand-dark"
                >
                  <h3 class="mb-6 text-xl font-bold text-brand-primary dark:text-brand-light">
                    <h3
                      class="mb-6 font-serif text-xl font-semibold text-brand-primary dark:text-brand-light"
                    >
                      Other ways to reach me
                    </h3>

                    <div class="space-y-6">
                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <svg
                            class="mt-1 h-6 w-6 text-primary-600 dark:text-primary-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                          </svg>
                        </div>
                        <div class="ml-4">
                          <h4 class="text-lg font-medium text-brand-primary dark:text-brand-light">
                            Email
                          </h4>
                          <h4
                            class="font-serif text-lg font-medium text-brand-primary dark:text-brand-light"
                          >
                            Email
                          </h4>
                          <p class="text-brand-subtle dark:text-gray-300">hi@sergio.io</p>
                        </div>
                      </div>

                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <svg
                            class="mt-1 h-6 w-6 text-primary-600 dark:text-primary-400"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                            ></path>
                          </svg>
                        </div>
                        <div class="ml-4">
                          <h4 class="text-lg font-medium text-brand-primary dark:text-brand-light">
                            Twitter
                          </h4>
                          <h4
                            class="font-serif text-lg font-medium text-brand-primary dark:text-brand-light"
                          >
                            Twitter
                          </h4>
                          <p class="text-brand-subtle dark:text-gray-300">@sergioio</p>
                        </div>
                      </div>

                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <svg
                            class="mt-1 h-6 w-6 text-primary-600 dark:text-primary-400"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                              clip-rule="evenodd"></path>
                          </svg>
                        </div>
                        <div class="ml-4">
                          <h4 class="text-lg font-medium text-brand-primary dark:text-brand-light">
                            LinkedIn
                          </h4>
                          <h4
                            class="font-serif text-lg font-medium text-brand-primary dark:text-brand-light"
                          >
                            LinkedIn
                          </h4>
                          <p class="text-brand-subtle dark:text-gray-300">
                            linkedin.com/in/sergioio
                          </p>
                        </div>
                      </div>
                    </div>
                  </h3>

                  <!-- Availability -->
                  <div
                    class="rounded-lg border border-brand-subtle/20 bg-brand-light p-8 shadow-lg dark:bg-brand-dark"
                  >
                    <h3 class="mb-4 text-xl font-bold text-brand-primary dark:text-brand-light">
                      <h3
                        class="mb-4 font-serif text-xl font-semibold text-brand-primary dark:text-brand-light"
                      >
                        Current Availability
                      </h3>
                      <div class="space-y-4">
                        <div class="flex items-center">
                          <div class="bg-green-500 mr-3 h-3 w-3 rounded-full"></div>
                          <span class="text-brand-subtle dark:text-gray-300"
                            >Available for speaking engagements</span
                          >
                        </div>
                        <div class="flex items-center">
                          <div class="bg-yellow-500 mr-3 h-3 w-3 rounded-full"></div>
                          <span class="text-brand-subtle dark:text-gray-300"
                            >Limited consulting availability</span
                          >
                        </div>
                        <div class="flex items-center">
                          <div class="bg-green-500 mr-3 h-3 w-3 rounded-full"></div>
                          <span class="text-brand-subtle dark:text-gray-300"
                            >Open to mentoring opportunities</span
                          >
                        </div>
                      </div>
                    </h3>

                    <!-- Response Time -->
                    <div class="rounded-lg bg-brand-accent/10 p-6 dark:bg-brand-accent/20">
                      <div class="flex items-center">
                        <svg
                          class="mr-3 h-6 w-6 text-brand-accent dark:text-brand-accent"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                          <h4 class="font-medium text-brand-primary dark:text-brand-light">
                            Response Time
                          </h4>
                          <p class="text-sm text-brand-subtle dark:text-gray-300">
                            I typically respond within 24-48 hours
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <Footer />
        </div>
      </section>
    </section>
  </main></BaseLayout
>
