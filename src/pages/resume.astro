---
import { SITE } from '../config/site.js';
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title={`Resume - ${SITE.author}`} description={`Professional resume and experience of ${SITE.author}, Software Engineer and Tech Lead.`}>
  <Navigation />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="bg-white dark:bg-gray-900 py-24">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Resume
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-8">
          Senior Engineering Manager with over 10 years of experience building scalable products and leading high-performing teams.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/sergio-pereira-resume.pdf" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download PDF
          </a>
          <a href="mailto:hello@sergio.io" class="inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-base font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
            Contact Me
          </a>
        </div>
      </div>
    </section>

    <!-- Professional Summary -->
    <section class="bg-gray-50 dark:bg-gray-800 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Professional Summary</h2>
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            Experienced Senior Engineering Manager with a proven track record of scaling engineering teams from 5 to 50+ engineers while maintaining high velocity and code quality. Expert in modern web technologies, system architecture, and agile methodologies. Passionate about building inclusive engineering cultures and mentoring the next generation of technical leaders.
          </p>
        </div>
      </div>
    </section>

    <!-- Experience -->
    <section class="bg-white dark:bg-gray-900 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Professional Experience</h2>
        
        <div class="space-y-8">
          <!-- Experience 1 -->
          <div class="border-l-4 border-primary-600 pl-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">Senior Engineering Manager</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400">2022 - Present</span>
            </div>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-3">TechCorp Inc. • Nashville, TN</p>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-4">
              <li>• Lead a team of 15+ engineers across multiple product areas, responsible for technical strategy and team growth</li>
              <li>• Implemented new development processes that improved team velocity by 40% and reduced deployment time by 60%</li>
              <li>• Architected and oversaw migration to microservices architecture, improving system reliability to 99.9% uptime</li>
              <li>• Established engineering hiring practices and onboarding programs, growing the team from 8 to 15 engineers</li>
              <li>• Mentored 5 engineers into senior roles and 2 into technical leadership positions</li>
            </ul>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">Team Leadership</span>
              <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">System Architecture</span>
              <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">Process Improvement</span>
            </div>
          </div>

          <!-- Experience 2 -->
          <div class="border-l-4 border-gray-300 dark:border-gray-600 pl-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">Tech Lead</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400">2020 - 2022</span>
            </div>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-3">TechCorp Inc. • Nashville, TN</p>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-4">
              <li>• Led technical direction for the core platform team of 8 engineers</li>
              <li>• Designed and implemented new microservices infrastructure using Node.js and Docker</li>
              <li>• Established coding standards, code review processes, and CI/CD pipelines</li>
              <li>• Reduced average API response time by 50% through performance optimization initiatives</li>
              <li>• Mentored junior engineers and conducted technical interviews for new hires</li>
            </ul>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Node.js</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Docker</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Microservices</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Performance Optimization</span>
            </div>
          </div>

          <!-- Experience 3 -->
          <div class="border-l-4 border-gray-300 dark:border-gray-600 pl-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">Senior Software Engineer</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400">2018 - 2020</span>
            </div>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-3">StartupXYZ • Remote</p>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-4">
              <li>• Built the initial product from ground up using React, Node.js, and PostgreSQL</li>
              <li>• Scaled the platform to handle 100k+ daily active users with 99.5% uptime</li>
              <li>• Implemented comprehensive testing strategy achieving 90%+ code coverage</li>
              <li>• Established CI/CD pipelines and development best practices for the growing team</li>
              <li>• Led frontend architecture decisions and component library development</li>
            </ul>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">React</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Node.js</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">PostgreSQL</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">CI/CD</span>
            </div>
          </div>

          <!-- Experience 4 -->
          <div class="border-l-4 border-gray-300 dark:border-gray-600 pl-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">Software Engineer</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400">2015 - 2018</span>
            </div>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-3">BigTech Solutions • Nashville, TN</p>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-4">
              <li>• Developed and maintained enterprise web applications using Java and Angular</li>
              <li>• Collaborated with cross-functional teams to deliver features on time and within budget</li>
              <li>• Participated in agile development processes and sprint planning</li>
              <li>• Contributed to code reviews and maintained high code quality standards</li>
              <li>• Gained experience in enterprise software architecture and design patterns</li>
            </ul>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Java</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Angular</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Agile</span>
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-sm rounded-full">Enterprise Software</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills -->
    <section class="bg-gray-50 dark:bg-gray-800 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Technical Skills</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Frontend</h3>
            <div class="space-y-2">
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">React</span>
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">TypeScript</span>
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">Next.js</span>
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">Tailwind CSS</span>
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-sm rounded-full">Vue.js</span>
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Backend</h3>
            <div class="space-y-2">
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-green/20 text-gray-800 dark:text-green text-sm rounded-full">Node.js</span>
                <span class="px-3 py-1 bg-green/20 text-gray-800 dark:text-green text-sm rounded-full">Python</span>
                <span class="px-3 py-1 bg-green/20 text-gray-800 dark:text-green text-sm rounded-full">PostgreSQL</span>
                <span class="px-3 py-1 bg-green/20 text-gray-800 dark:text-green text-sm rounded-full">Redis</span>
                <span class="px-3 py-1 bg-green/20 text-gray-800 dark:text-green text-sm rounded-full">GraphQL</span>
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">DevOps & Cloud</h3>
            <div class="space-y-2">
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-pink/20 text-gray-800 dark:text-pink text-sm rounded-full">AWS</span>
                <span class="px-3 py-1 bg-pink/20 text-gray-800 dark:text-pink text-sm rounded-full">Docker</span>
                <span class="px-3 py-1 bg-pink/20 text-gray-800 dark:text-pink text-sm rounded-full">Kubernetes</span>
                <span class="px-3 py-1 bg-pink/20 text-gray-800 dark:text-pink text-sm rounded-full">CI/CD</span>
                <span class="px-3 py-1 bg-pink/20 text-gray-800 dark:text-pink text-sm rounded-full">Terraform</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Education -->
    <section class="bg-white dark:bg-gray-900 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Education & Certifications</h2>
        
        <div class="space-y-6">
          <div class="border-l-4 border-primary-600 pl-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white">Bachelor of Science in Computer Science</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400">2011 - 2015</span>
            </div>
            <p class="text-primary-600 dark:text-primary-400 font-semibold">University of Tennessee • Nashville, TN</p>
          </div>
          
          <div class="border-l-4 border-gray-300 dark:border-gray-600 pl-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">AWS Certified Solutions Architect</h3>
            <p class="text-gray-600 dark:text-gray-300">Professional level certification • Valid through 2025</p>
          </div>
          
          <div class="border-l-4 border-gray-300 dark:border-gray-600 pl-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Certified Scrum Master (CSM)</h3>
            <p class="text-gray-600 dark:text-gray-300">Scrum Alliance • Valid through 2025</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Awards & Recognition -->
    <section class="bg-gray-50 dark:bg-gray-800 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Awards & Recognition</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-sm">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Engineering Excellence Award</h3>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-2">TechCorp Inc. • 2023</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">Recognized for outstanding leadership in scaling engineering teams and implementing best practices.</p>
          </div>
          
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-sm">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Top Speaker Award</h3>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-2">ReactConf • 2023</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">Highest-rated speaker at ReactConf 2023 for "Building High-Performance Engineering Teams".</p>
          </div>
          
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-sm">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Innovation Award</h3>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-2">StartupXYZ • 2019</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">Led development of core platform features that increased user engagement by 200%.</p>
          </div>
          
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-sm">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Mentor of the Year</h3>
            <p class="text-primary-600 dark:text-primary-400 font-semibold mb-2">TechCorp Inc. • 2022</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">Recognized for exceptional mentoring and developing junior engineers into senior roles.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>