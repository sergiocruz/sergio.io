---
import { SITE } from '../config/site.ts';
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title={`Projects - ${SITE.author}`} description={`A showcase of projects and open source contributions by ${SITE.author}.`}>
  <Navigation />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="bg-brand-light dark:bg-brand-dark py-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-serif font-semibold text-brand-primary dark:text-brand-light mb-6">
          Projects
        </h1>
        <p class="text-xl text-brand-subtle dark:text-gray-300 max-w-3xl mx-auto">
          A showcase of projects I've built, contributed to, and open source work that I'm passionate about.
        </p>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="bg-white dark:bg-brand-primary py-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Project 1 -->
          <div class="bg-brand-light dark:bg-brand-dark rounded-lg shadow-lg overflow-hidden border border-brand-subtle/20">
            <div class="h-48 bg-gradient-to-br from-primary-400 to-primary-600"></div>
            <div class="p-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-2xl font-serif font-semibold text-brand-primary dark:text-brand-light">DevTools Pro</h3>
                <div class="flex space-x-2">
                  <a href="https://github.com/sergioio/devtools-pro" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                  <a href="https://devtools-pro.com" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
              <p class="text-brand-subtle dark:text-gray-300 mb-6 leading-relaxed">
                A comprehensive suite of developer tools built with React and TypeScript. Features include JSON formatter, API testing, regex builder, and more. Used by 50k+ developers worldwide.
              </p>
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm rounded-full">React</span>
                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm rounded-full">TypeScript</span>
                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm rounded-full">Node.js</span>
                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm rounded-full">PostgreSQL</span>
              </div>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
                <span>1.2k stars</span>
                <span class="mx-2">•</span>
                <span>MIT License</span>
              </div>
            </div>
          </div>

          <!-- Project 2 -->
          <div class="bg-brand-light dark:bg-brand-dark rounded-lg shadow-lg overflow-hidden border border-brand-subtle/20">
            <div class="h-48 bg-gradient-to-br from-green-400 to-blue-500"></div>
            <div class="p-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-2xl font-serif font-semibold text-brand-primary dark:text-brand-light">React Performance Kit</h3>
                <div class="flex space-x-2">
                  <a href="https://github.com/sergioio/react-performance-kit" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                  <a href="https://www.npmjs.com/package/react-performance-kit" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
              <p class="text-brand-subtle dark:text-gray-300 mb-6 leading-relaxed">
                A collection of React hooks and utilities for performance optimization. Includes virtualization, memoization helpers, and performance monitoring tools. Downloaded 100k+ times monthly.
              </p>
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-sm rounded-full">React</span>
                <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-sm rounded-full">TypeScript</span>
                <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-sm rounded-full">Jest</span>
                <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-sm rounded-full">Rollup</span>
              </div>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
                <span>2.8k stars</span>
                <span class="mx-2">•</span>
                <span>MIT License</span>
              </div>
            </div>
          </div>

          <!-- Project 3 -->
          <div class="bg-brand-light dark:bg-brand-dark rounded-lg shadow-lg overflow-hidden border border-brand-subtle/20">
            <div class="h-48 bg-gradient-to-br from-purple-400 to-pink-500"></div>
            <div class="p-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-2xl font-serif font-semibold text-brand-primary dark:text-brand-light">API Gateway</h3>
                <div class="flex space-x-2">
                  <a href="https://github.com/sergioio/api-gateway" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
              <p class="text-brand-subtle dark:text-gray-300 mb-6 leading-relaxed">
                A lightweight, high-performance API gateway built with Node.js. Features rate limiting, authentication, load balancing, and request/response transformation. Handles 10k+ requests per second.
              </p>
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-sm rounded-full">Node.js</span>
                <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-sm rounded-full">Express</span>
                <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-sm rounded-full">Redis</span>
                <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-sm rounded-full">Docker</span>
              </div>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
                <span>890 stars</span>
                <span class="mx-2">•</span>
                <span>Apache 2.0</span>
              </div>
            </div>
          </div>

          <!-- Project 4 -->
          <div class="bg-brand-light dark:bg-brand-dark rounded-lg shadow-lg overflow-hidden border border-brand-subtle/20">
            <div class="h-48 bg-gradient-to-br from-yellow-400 to-orange-500"></div>
            <div class="p-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-2xl font-serif font-semibold text-brand-primary dark:text-brand-light">Code Review Bot</h3>
                <div class="flex space-x-2">
                  <a href="https://github.com/sergioio/code-review-bot" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                  <a href="https://marketplace.github.com/actions/code-review-bot" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
              <p class="text-brand-subtle dark:text-gray-300 mb-6 leading-relaxed">
                An AI-powered GitHub Action that automatically reviews pull requests for code quality, security issues, and best practices. Integrates with popular linting tools and provides actionable feedback.
              </p>
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-sm rounded-full">Python</span>
                <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-sm rounded-full">GitHub Actions</span>
                <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-sm rounded-full">OpenAI</span>
                <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-sm rounded-full">Docker</span>
              </div>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
                <span>1.5k stars</span>
                <span class="mx-2">•</span>
                <span>MIT License</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Open Source Contributions -->
        <div class="mt-24">
          <h2 class="text-3xl font-serif font-semibold text-brand-primary dark:text-brand-light text-center mb-16">
            Open Source Contributions
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-brand-light dark:bg-brand-dark p-6 rounded-lg shadow-md border border-brand-subtle/20">
              <h3 class="text-lg font-serif font-semibold text-brand-primary dark:text-brand-light mb-2">React</h3>
              <p class="text-brand-subtle dark:text-gray-300 text-sm mb-4">
                Contributed performance improvements and bug fixes to React core.
              </p>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <span>15 PRs merged</span>
                <span class="mx-2">•</span>
                <span>Core contributor</span>
              </div>
            </div>
            
            <div class="bg-brand-light dark:bg-brand-dark p-6 rounded-lg shadow-md border border-brand-subtle/20">
              <h3 class="text-lg font-serif font-semibold text-brand-primary dark:text-brand-light mb-2">Next.js</h3>
              <p class="text-brand-subtle dark:text-gray-300 text-sm mb-4">
                Added new features and documentation improvements to Next.js framework.
              </p>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <span>8 PRs merged</span>
                <span class="mx-2">•</span>
                <span>Documentation</span>
              </div>
            </div>
            
            <div class="bg-brand-light dark:bg-brand-dark p-6 rounded-lg shadow-md border border-brand-subtle/20">
              <h3 class="text-lg font-serif font-semibold text-brand-primary dark:text-brand-light mb-2">TypeScript</h3>
              <p class="text-brand-subtle dark:text-gray-300 text-sm mb-4">
                Contributed type definitions and compiler improvements.
              </p>
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <span>5 PRs merged</span>
                <span class="mx-2">•</span>
                <span>Type definitions</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>